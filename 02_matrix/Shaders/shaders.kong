struct vertex_in {
	pos: float3;
}

struct vertex_out {
	pos: float4;
}

const constants: {
	mvp: float4x4;
};

fun pos(input: vertex_in): vertex_out {
	var output: vertex_out;
	var position: float4;
	position.xyz = input.pos;
	position.w = 1.0;
	output.pos = constants.mvp * position;
}

fun pixel(input: vertex_out): float4 {
	return float4(1.0, 0.0, 0.0, 1.0);
}

#[pipe]
struct pipeline {
	vertex = pos;
	fragment = pixel;
}
