struct vertex_in {
	pos: float3;
}

struct vertex_out {
	pos: float4;
}

fun pos(input: vertex_in): vertex_out {
	var out: vertex_out;
	out.pos.x = input.pos.x;
	out.pos.y = input.pos.y;
	out.pos.z = 0.5;
	out.pos.w = 1.0;
	return out;
}

fun pix(input: vertex_out): float4 {
	return float4(1.0, 0.0, 0.0, 1.0);
}

#[pipe]
struct pipeline {
	vertex = pos;
	fragment = pix;
}
